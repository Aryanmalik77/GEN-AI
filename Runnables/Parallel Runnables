from langchain_huggingface import ChatHuggingFace,HuggingFaceEndpoint
from langchain_core.prompts import PromptTemplate
from dotenv import load_dotenv
from langchain_core.output_parsers import StrOutputParser
from langchain.schema.runnable import RunnableSequence, RunnableParallel
load_dotenv()
llm = HuggingFaceEndpoint(
    repo_id = "deepseek-ai/DeepSeek-V3.2-Exp",
    task = "text-generation",
    huggingfacehub_api_token = ""
)
model = ChatHuggingFace(llm = llm)
prompt1 = PromptTemplate(
    template = "write a tweets about the {topic}",
    input_variables = ["topic"]

)
prompt2 = PromptTemplate(
    template = "write a poem about the {topic}",
    input_variables = ["topic"]

)
parser = StrOutputParser()
chains = RunnableParallel({
    "tweets": RunnableSequence(prompt1, model, parser),
    "poem" : RunnableSequence(prompt2, model, parser)
})
result = chains.invoke({"topic":"father"})
